Screen {
    background: #c0c0c0;
}

#menu-bar {
    dock: top;
    height: 1;
    background: #ffffff;
    color: #000000;
}

#apple-menu {
    width: auto;
    background: #000000;
    color: #ffffff;
    padding: 0 1;
}

#menu-items {
    width: 1fr;
    background: #ffffff;
    color: #000000;
    padding: 0 1;
}

#main-window {
    margin: 1 3;
    background: #ffffff;
    border: wide #000000;
}

#title-bar {
    height: 1;
    background: #000000;
    color: #ffffff;
}

#close-button {
    width: 3;
    min-width: 3;
    background: #ffffff;
    color: #000000;
    border: none;
}

#title-text {
    width: 1fr;
    background: #000000;
    color: #ffffff;
    text-align: center;
    text-style: bold;
}

#zoom-button {
    width: 3;
    min-width: 3;
    background: #ffffff;
    color: #000000;
    border: none;
}

TabbedContent {
    background: #ffffff;
}

ContentSwitcher {
    background: #ffffff;
}

Tabs {
    background: #ffffff;
    color: #000000;
}

Tab {
    background: #ffffff;
    color: #000000;
    padding: 0 2;
}

Tab:hover {
    background: #e0e0e0;
    color: #000000;
}

Tab.-active {
    background: #ffffff;
    color: #000000;
    text-style: bold underline;
}

Underline > .underline--bar {
    color: #000000;
    background: #c0c0c0;
}

TabPane {
    background: #ffffff;
    padding: 1;
}

#welcome-panel {
    height: auto;
    background: #ffffff;
    padding: 1;
    align: center top;
}

#mac-icon {
    text-align: center;
    color: #000000;
}

#welcome-text {
    text-align: center;
    color: #000000;
    padding: 1;
}

#ok-button {
    width: 16;
    margin: 1 2;
}

#chat-area {
    height: 1fr;
    background: #ffffff;
}

#chat-log {
    height: 1fr;
    background: #ffffff;
    border: solid #000000;
    margin: 0 1;
    scrollbar-background: #c0c0c0;
    scrollbar-color: #000000;
}

RichLog {
    background: #ffffff;
    color: #000000;
    padding: 1;
}

#input-area {
    height: auto;
    padding: 1;
    background: #ffffff;
}

#user-input {
    background: #ffffff;
    color: #000000;
    border: solid #000000;
}

#user-input:focus {
    border: double #000000;
}

#status-bar {
    dock: bottom;
    height: 1;
    background: #ffffff;
    border-top: solid #000000;
}

#status-text {
    width: 1fr;
    background: #ffffff;
    color: #000000;
    padding: 0 1;
}

#progress {
    width: 20;
    background: #ffffff;
}

ProgressBar > .bar--bar {
    color: #000000;
}

ProgressBar > .bar--complete {
    color: #000000;
}

LoadingIndicator {
    background: #ffffff;
    color: #000000;
}

Footer {
    background: #ffffff;
    color: #000000;
}

Footer > .footer--key {
    background: #000000;
    color: #ffffff;
}

Footer > .footer--description {
    background: #ffffff;
    color: #000000;
}

Button {
    background: #ffffff;
    color: #000000;
    border: tall #000000;
}

Button:hover {
    background: #e0e0e0;
}

Button:focus {
    border: double #000000;
}

Rule {
    color: #000000;
}

Markdown {
    background: #ffffff;
    color: #000000;
    margin: 0;
    padding: 0;
}
